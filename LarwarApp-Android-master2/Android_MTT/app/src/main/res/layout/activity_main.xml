<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.developer.android_mtt.MainActivity"
    android:background="@color/colorPrimary">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_above="@+id/btnSenha"
        android:layout_centerHorizontal="true"
        android:id="@+id/senha" />

    <TextView
        android:text="Informe sua Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/senha"
        android:layout_centerHorizontal="true"
        android:id="@+id/tx1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tx2"
        android:layout_alignStart="@+id/senha"
        android:id="@+id/numero" />

    <Button
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSenha"
        android:layout_marginBottom="79dp"
        android:layout_above="@+id/tx2"
        android:layout_alignStart="@+id/btnNumero" />

    <TextView
        android:text="Informe um número"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Número"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNumero"
        android:layout_below="@+id/numero"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
