<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bnotas.studio.com.br.bnotas.MainActivity"
    android:background="@drawable/fundo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="21dp"
        android:id="@+id/texto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/blocoDeNotas"
        android:background="@drawable/fundo_anotacao"
        android:layout_below="@+id/texto"
        android:layout_alignRight="@+id/texto"
        android:layout_alignEnd="@+id/texto"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:gravity="start"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="@dimen/textoNota" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botao_salvar"
        android:id="@+id/btnSalvar"
        android:layout_below="@+id/blocoDeNotas"
        android:layout_alignLeft="@+id/blocoDeNotas"
        android:layout_alignStart="@+id/blocoDeNotas" />
</RelativeLayout>
